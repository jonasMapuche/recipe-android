                    android:layout_weight="1"
                    android:clickable="true"
                    android:backgroundTint="@color/fab"
                    android:contentDescription="@string/text_element_ion_2"
                    android:labelFor="@id/text_element_ion_2"
                    app:srcCompat="@android:drawable/ic_menu_myplaces" />

                <TextView
                    android:id="@+id/text_element_ion_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="@string/text_element_ion_2"
                    android:textAlignment="gravity"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner_element_cov_1"
